# MySQL configure file

[client]
socket              =   /tmp/mysql.sock
port                =   3306
bind-address        =   127.0.0.1
large-page			=	OFF

[mysqld]
socket              =   /tmp/mysql.sock
port                =   3306
bind-address        =   127.0.0.1
# skip-networking     =   0
# skip_ssl            =   0
wait_timeout        =   60
interactive_timeout =   120
tls_version         =   TLSv1.2
ssl_ca              =   /etc/ca.pem
ssl_cert            =   /etc/server-cert.pem
ssl_key             =   /etc/server-key.pem
require_secure_transport    =   ON


[mysql]
connect_timeout     =   2
